<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_bar_size">

    <FrameLayout
        android:id="@+id/titleLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/ivTitleLayoutBack"
        android:layout_width="@dimen/common_title_bar_size"
        android:layout_height="@dimen/common_title_bar_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/common_ic_title_back" />

    <LinearLayout
        android:id="@+id/titleLayoutMenuContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" />
</RelativeLayout>